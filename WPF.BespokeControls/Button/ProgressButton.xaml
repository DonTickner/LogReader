<Button x:Class="WPF.BespokeControls.Button.ProgressButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF.BespokeControls.Button"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Button.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Rectangle Name="rectangle" VerticalAlignment="Stretch" Grid.Column="0"/>
            <TextBlock Name="textBlock" Text="Text" Grid.Column="0" HorizontalAlignment="Right"/>
        </Grid>
    </Button.Content>
</Button>
