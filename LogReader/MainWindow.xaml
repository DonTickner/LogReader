<Window x:Class="LogReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogReader"
        mc:Ignorable="d"
        Title="MainWindow" Height="436.65" Width="884.488" MinWidth="200" MinHeight="200"
        SizeChanged="MainWindow_SizeChanged" WindowStyle="ThreeDBorderWindow">
    <Grid Name="LayoutGrid" ShowGridLines="False" Margin="0,0,2,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MinHeight="100"/>
            <RowDefinition Height="Auto" MinHeight="43"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="75"/>
        </Grid.ColumnDefinitions>
        <Button Name="loadFileButton" Content="Load File" VerticalAlignment="Bottom" Margin="10,0,0,10" Grid.Row="1" Height="20" HorizontalAlignment="Left" Width="63" Click="LoadFileButton_Click"/>
        <TextBox Name="LineTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Text="TextBox" Margin="10,10,27,0" Grid.Column="0" Grid.Row="0"/>
        <ScrollBar Name="manualScrollBar" Margin="0,10,10,0" Width="17" HorizontalAlignment="Right"/>
        <Button Name="countLinesInFileButton" Content="Count Lines in Current File" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="78,13,0,0" Grid.Row="1" Click="Button_Click_2"/>
    </Grid>
</Window>