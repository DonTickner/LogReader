<Window x:Class="LogReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogReader"
        mc:Ignorable="d"
        Title="MainWindow" Height="428.93" Width="1116.024" MinWidth="200" MinHeight="200"
        WindowStyle="ThreeDBorderWindow">
    <Grid Name="LayoutGrid" ShowGridLines="False" Margin="0,0,2,0">
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="100"/>
            <RowDefinition Height="Auto" MinHeight="43"/>
            <RowDefinition Height="Auto" MinHeight="43"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="75"/>
            <ColumnDefinition Width="*" MinWidth="75"/>
        </Grid.ColumnDefinitions>
        <Button Name="LoadFileButton" Content="Load File" VerticalAlignment="Bottom" Margin="10,0,0,10" Grid.Row="1" Height="20" HorizontalAlignment="Left" Width="63" Click="LoadFileButton_Click"/>
        <TextBox Name="LineTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,10,10,0" Grid.Column="0" Grid.Row="0" TextChanged="LineTextBox_OnTextChanged" Visibility="Hidden"/>
        <ScrollBar Name="ManualScrollBar" Margin="0,10,10,0" Width="17" HorizontalAlignment="Right" Scroll="ManualScrollBar_OnScroll" ValueChanged="ManualScrollBar_OnValueChanged" Grid.Column="1"/>
        <Button Name="CountLinesInFileButton" Content="Count Lines in Current File" HorizontalAlignment="Left" Width="160" Margin="78,13,0,10" Grid.Row="1" Click="Button_Click_2"/>
        <Label Name="ByteWindowLabel" Content="Label" Margin="10,7,0,10" Grid.Row="2" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Width="142"/>
        <Label Name="ScrollValueLabel"  Content="Label" Margin="0,7,10,10" Grid.Row="2" RenderTransformOrigin="1.382,0.582" HorizontalAlignment="Right" Width="200" HorizontalContentAlignment="Right"/>
        <DataGrid x:Name="Lines" Grid.Column="1" Margin="0,10,32,0" ItemsSource="{Binding LogLines}">
        </DataGrid>
    </Grid>
</Window>